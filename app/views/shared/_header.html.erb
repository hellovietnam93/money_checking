<header class="main-header">
  <%= link_to root_path, class: "logo", title: t("app.name") do %>
    <span class="logo-mini"><%= image_tag "logo.png" %></span>
    <span class="logo-lg"><%= image_tag "logo.png" %></span>
  <% end %>
  <nav class="navbar navbar-static-top" role="navigation">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
              <%= image_tag "default-user-img.png", class: "img-circle" %>
              <span class="hidden-xs"><%= current_user.username %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= image_tag "default-user-img.png", class: "img-circle" %>
                <p>
                  <%= current_user.username %>
                </p>
              </li>
              <li class="user-footer">
                <div class="col-xs-4 text-center">
                  <%= link_to t("users.titles.profile"), "#",
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="col-xs-4 text-center">

                </div>
                <div class="col-xs-4 text-center">
                  <%= link_to t("app.sign_out"), destroy_user_session_path, method: :delete,
                    class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_session_path do %>
              <i class="fa fa-sign-in fa-tw"></i>
              <%= t "app.sign_in" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
