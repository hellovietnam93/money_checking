<div class="box">
  <div class="box-header">
    <h3 class="box-title"><%= t "item_buyings.titles.all" %></h3>
    <div class="box-tools">
      <div class="input-group input-group-sm" style="width: 150px;">
        <div class="input-group-btn">
          <%= link_to t("item_buyings.titles.create"), new_item_buying_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th><%= t "item_buyings.attributes.category" %></th>
          <th><%= t "item_buyings.attributes.name" %></th>
          <th><%= t "item_buyings.attributes.price" %></th>
          <th><%= t "item_buyings.attributes.estimate_start_time" %></th>
          <th><%= t "item_buyings.attributes.web_link" %></th>
          <th><%= t "item_buyings.attributes.status" %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @item_buyings %>
      </tbody>
    </table>
  </div>
</div>
