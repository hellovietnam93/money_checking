<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo" style="margin-bottom: 10px">
      <b><%= t "static_page.welcome" %></b><br>
      <span style="font-size: 26px">
        <%= link_to t("static_page.app_name"), root_path %>
      </span>
    </div>
    <div class="login-box-body">
      <p class="login-box-msg"><%= t "static_page.instruction" %></p>
      <%= form_for resource, as: resource_name, url: session_path(resource_name),
        html: {class: "row-fluid"} do |f| %>
        <div class="form-group has-feedback">
          <%= f.text_field :email, class: "form-control", placeholder: t("users.fields.email") %>
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class: "form-control", placeholder: t("users.fields.password") %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= t "forum.buttons.remember_me" %>
              </label>
            </div>
          </div>
          <div class="col-xs-4">
            <%= f.submit t("users.title.sign_in"), class: "btn btn-primary btn-block btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
